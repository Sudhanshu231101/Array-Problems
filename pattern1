#include<iostream>
using namespace std;

int main(){
    int n;
    cin>>n;
    int t=2*n;
    
    for(int i=0;i<n;i++){
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
        t=t-2;
        for(int i=0;i<t;i++){
            cout<<" ";
        }
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
